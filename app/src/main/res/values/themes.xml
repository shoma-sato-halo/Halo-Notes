<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HaloNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/nearly_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nearly_black</item>
        <item name="colorSecondaryVariant">@color/nearly_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dim_gray</item>
        <!-- Customize your theme here. -->
        <item name="itemBackground">@color/nearly_white</item>
        <item name="itemTextColor">@color/steel_blue</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="ToolbarTextAppearanceForNotesFragment" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ToolbarTextAppearanceForOtherThanNotesFragment" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" />
</resources>